    print("--- Fulani to English Dictionary ---")
    print("Type a Fulani word to translate (or 'quit' to exit).")
    while True:
        word = input("> ").strip()
        if not word:
            continue
        if word.lower() in ("q", "quit", "exit"):
            break

        result = translate(word, translations)
        if result:
            print(f"The English translation for '{word}' is: {result}")
        else:
            suggestions = suggest(word, translations)
            if suggestions:
                print(f"Sorry, '{word}' not found. Did you mean: {', '.join(suggestions)}?")
            else:
                print(f"Sorry, '{word}' is not in our dictionary yet.")
